<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plonetheme.iuem20">

<body>

<metal:content-core fill-slot="main">
<metal:content-core define-macro="main">
<span tal:define="gallery python:view.getGalleryImages();
                  nb_images python:len(gallery)">
 <div class="row">
   <div class="text-center col-md-offset-1 col-md-11 col-ms-12 col-sm-offset-0">
      <div class="super">${context/title}</div>
      <div>(${nb_images} images)</div>
   </div>
  </div>
  <div class="row">
   <div tal:define="description context/description"
        class="text-justify col-md-offset-1 col-md-11 col-ms-12 col-sm-offset-0">
     <span tal:content="structure string:${description}">description</span>
   </div>
  </div>
  <div class="row">
   <div tal:condition="gallery" class="col-md-11 col-md-offset-1 col-sm-12 col-sm-offset-0">
        <metal:macro use-macro="context/iuem20_macros/macros/gallery-iuem20" />
   </div>
  </div>
</span>
</metal:content-core>
</metal:content-core>

</body>
</html>
